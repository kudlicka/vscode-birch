{
    "for": {
        "prefix": "for ",
        "body": [
            "for ${1:/* identifier */} in ${2:1}..${3:/* upper limit */} {",
            "\t${0://}",
            "}"
        ]
    },

    "while": {
        "prefix": "while ",
        "body": [
            "while ${1:/* condition */} {",
            "\t${0://}",
            "}"
        ]
    },

    "do": {
        "prefix": "do ",
        "body": [
            "do {",
            "\t${0://}",
            "} while ${1:/* condition */};"
        ]
    },

    "if": {
        "prefix": "if ",
        "body": [
            "if ${1:/* condition */} {",
            "\t${0://}",
            "}"
        ],
    },

    "else": {
        "prefix": "else ",
        "body": [
            "else {",
            "\t${0://}",
            "}"
        ]
    },

    "else if": {
        "prefix": "else if ",
        "body": [
            "else if ${1:/* condition */} {",
            "\t${0://}",
            "}"
        ]
    },

    "let": {
        "prefix": "let ",
        "body": "let ${1:/* identifier */} <- ${2:/* expression */};"
    },

    "class": {
        "prefix": "class ",
        "body": [
            "class ${1:/* identifier */} {",
            "\t${0://}",
            "}"
        ]
    },

    "function": {
        "prefix": "function ",
        "body": [
            "function ${1:/* identifier */}(${2:/* parameters */}) ${3:-> /* return type */} {",
            "\t${0://}",
            "}"
        ]
    },

    "class ... < Model": {
        "prefix": "!model",
        "body": [
            "class ${1:/* identifier */} < Model {",
            "\tfunction size() -> Integer {",
            "\t\treturn 0;",
            "\t}",
            "",
            "\tfunction simulate() {",
            "\t\t${0://}",
            "\t}",
            "",
            "\tfunction simulate(t:Integer) {",
            "\t\t//",
            "\t}",
            "}"
        ]
    },

    "stdout.print(\"...\")": {
        "prefix": "!print",
        "body": "stdout.print(\"$0\");"
    },

    "stderr.print(\"...\")": {
        "prefix": "!printerr",
        "body": "stderr.print(\"$0\");"
    },

    "function write(buffer:Buffer)": {
        "prefix": "!write",
        "body": [
            "function write(buffer:Buffer) {",
            "\t${0://}",
            "}"
        ]
    },

    "function read(buffer:Buffer)": {
        "prefix": "!read",
        "body": [
            "function read(buffer:Buffer) {",
            "\t${0://}",
            "}"
        ]
    },

    "buffer.set(...)": {
        "prefix": "!set",
        "body": "buffer.set(\"${1:identifier}\", ${2:$1});"
    },

    "buffer.get(...)": {
        "prefix": "!get",
        "body": "buffer.get(\"${1:identifier}\", ${2:$1});"
    }
}
